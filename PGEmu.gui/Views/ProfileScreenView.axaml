<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:PGEmu.gui.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="PGEmu.gui.Views.ProfileScreenView"
             x:DataType="vm:ProfileScreenViewModel">
    <Grid RowDefinitions="Auto,*,*,*,*,*" ColumnDefinitions="Auto,*,*,*,*,*,*,*,*" Margin="16" RowSpacing="12" ColumnSpacing="12"
          ShowGridLines="False">
        <Button Grid.Row="0" Grid.Column="8"
                Content="Back" 
                Width="50" Height="30"
                Click="navigateHome"/>
        <Viewbox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Stretch="UniformToFill"
                 VerticalAlignment="Top"
                 RenderTransformOrigin="0.5,0"
                 ClipToBounds="True">
            <Viewbox.RenderTransform>
                <ScaleTransform ScaleX="2" ScaleY="1.3"/>
            </Viewbox.RenderTransform>
            

            <Image Source="/Assets/souljaboytellem.jpg"/>
        </Viewbox>
        
        <TextBlock Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="24">Soulja Boy Gaming</TextBlock>
        <TextBlock Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" Grid.RowSpan="2" TextWrapping="Wrap" >Soulja Boy, the stage name of DeAndre Cortez Way, is an American rapper and record producer who rose to fame in 2007 with his self-released single "Crank That". </TextBlock>
        <Border Grid.Row="2"
                Grid.Column="7"
                Grid.RowSpan="2"
                Grid.ColumnSpan="2"
                Padding="10"
                CornerRadius="8">
            <StackPanel Spacing="8">
                <TextBlock FontSize="24"
                           FontWeight="Bold"
                           Text="Friends" />
                
                
                <ListBox ItemsSource="{Binding Friends}"
                         >
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding }" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>
